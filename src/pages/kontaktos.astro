---
import MainLayout from "../layouts/MainLayout.astro";
import Contact from "../components/Contact.astro";
---

<MainLayout titel="Kontakt Os">
  <div class="container">
    <h2>Kontakt os</h2>
    <article id="kontakt_info">
      <div class="kontakt_container">
        <img src="/img/svg/map.svg" alt="map icon" class="icons" />
        <p>
          Meterbuen 6 B, <br /> 2740 Skovlunde, Denmark
        </p>
      </div>
      <div class="kontakt_container">
        <img src="/img/svg/mail.svg" alt=" mail icon" class="icons" />
        <p>felix@skovlunde-ms.dk</p>
      </div>
      <div class="kontakt_container">
        <img src="/img/svg/telefon.svg" alt=" telefon icon" class="icons" />
        <p>+45 30 13 41 69</p>
      </div>
    </article>
    <article id="kontakt_form">
      <Contact />
    </article>
  </div>
</MainLayout>
<style>
  .container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    /* align-items: center; */
    margin: 40px 40px 40px 40px;
    text-align: left;
    padding: 20px;
  }
  h2 {
    grid-row: 1;
    padding: 30px 10px;
  }

  #kontakt_info {
    grid-row: 2;
    background-color: var(--green60);
    border-radius: 30px;
    width: fit-content;
    padding: 35px;
    height: fit-content;
  }
  #kontakt_form {
    grid-row: 2;
    grid-column: 2;
  }

  #container_1_1 {
    padding-top: 50px;
  }
  .icons {
    width: 40px;
    background-color: var(--green50);
    border-radius: 30px;
    padding: 5px 7px;
    height: 40px;
  }
  .kontakt_container {
    display: flex;
    gap: 10px;
    justify-content: left;
    flex-direction: row;
    align-items: center;
  }
  p {
    grid-column: 2;
    font-size: 20px;
    color: var(--green10);
    padding: 20px 40px;
  }

  @media screen and (max-width: 400px) {
    p {
      font-size: 16px;
    }
    .container {
      display: flex;
      flex-direction: column;
      margin: 0;
      padding: 0;
    }
    #kontakt_info {
      padding: 15px;
      margin-bottom: 80px;
    }
  }
</style>
