<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 40px;
    background-color: var(--green50);
    width: 100vw;
    top: 0%;
    z-index: 1000;
  }

  .logo img {
    width: 100px;
    height: 100px;
  }
  .logo {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
  }

  nav {
    display: flex;
    align-items: center;
    background-color: var(--green50);
    position: fixed;
    border-radius: 2rem;
    z-index: 1000;
    right: 5%;
    padding: 0.5rem;
  }

  .menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu li {
    margin-right: 20px;
  }

  .menu li:last-child {
    margin-right: 0;
  }

  .menu a {
    display: block;
    padding: 10px;
    color: var(--green10);
    text-decoration: none;
    transition: color 0.3s;
    text-align: end;
    font-family: var(--primaryfont);
    font-weight: 600;
  }
  .logo a {
    color: var(--green10);
    text-decoration: none;
    font-weight: 600;
    font-size: 1.5rem;
  }

  #logo_img {
    background-color: var(--green70);
  }
  .menu a:hover {
  }

  .burger {
    width: 30px;
    height: 30px;
    cursor: pointer;
    padding: 5px 2px;
  }

  .burger .line {
    width: 100%;
    height: 2px;
    background-color: #333;
    margin-bottom: 5px;
    transition: 0.2s linear;
  }
  .burger {
    display: none;
  }
  @media screen and (max-width: 800px) {
    .logo a {
      font-size: 1rem;
    }
    .menu {
      display: none;
    }
    .burger {
      display: block;
      z-index: 10;
    }
    .burger.active .line:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
      transition: 0.2s linear;
    }

    .burger.active .line:nth-child(2) {
      opacity: 0;
      transition: 0.15s linear;
    }

    .burger.active .line:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
      transition: 0.2s linear;
    }

    nav.active .menu {
      display: block;
      background-color: var(--green40);
      position: absolute;
      top: -80%;
      right: -45%;
      width: 380px;
      z-index: 1;
      height: 300px;
      padding-top: 90px;
    }

    nav.active .menu li {
      margin: 10px 20px;
    }

    nav.active .menu a {
      font-size: 24px;
    }
  }
</style>

<script>
  const burger = document.querySelector(".burger");
  const nav = document.querySelector("nav");
  const menu = document.querySelector(".menu");
  const links = document.querySelectorAll(".menu li a");

  burger.addEventListener("click", () => {
    burger.classList.toggle("active");
    nav.classList.toggle("active");
  });

  links.forEach((link) => {
    link.addEventListener("click", () => {
      burger.classList.remove("active");
      nav.classList.remove("active");
    });
  });
</script>
