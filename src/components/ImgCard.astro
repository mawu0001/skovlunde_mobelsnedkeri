console.log(data);
---

 <div class="img_container">
<img src={data.img} alt={data.navn} />
 </div>

<style>
  .img_container {
    display: flex;
    flex-direction: row; /* Display content in a row */
    align-items: center; /* Center items vertically */
    flex-basis: calc((100% - 20px) / 3); /* Initial width of the card */
    max-width: calc((100% - 20px) / 3); /* Maximum width of the card */
    margin: 0 10px 10px 0; /* Margin between cards */
    /* display: flex;
    flex-direction: row;*/
    flex-wrap: wrap; /*  Allow images to wrap to the next line if necessary */
  }

  img {
    width: 100%; /* Make sure the image fills the container */
    height: auto; /* Maintain aspect ratio */
    align-items: center; /* Center items vertically */
    flex-basis: calc((100% - 20px) / 3); /* Initial width of the card */
    max-width: calc((100% - 20px) / 3); /* Maximum width of the card */
  }
</style>
