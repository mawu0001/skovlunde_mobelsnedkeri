---
const { data } = Astro.props;
console.log(data);
---

<div class="img_container">
  <img src={data.img} alt="" />
</div>

<style>
  .img_container {
    width: 400px; /* Desired width */
    height: 600px; /* Desired height */
    overflow: hidden; /* Hide overflow */
    position: relative; /* Required for absolute positioning */
  }

  img {
    width: auto; /* Allow image to adjust width */
    height: auto; /* Allow image to adjust height */
    max-width: none; /* Disable max-width */
    max-height: none; /* Disable max-height */
    position: absolute; /* Position the image absolutely */
    top: 50%; /* Move the image to the center vertically */
    left: 50%; /* Move the image to the center horizontally */
    transform: translate(-50%, -50%); /* Center the image */
  }
</style>
